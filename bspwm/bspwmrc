#! /bin/sh

killall -9 sxhkd compton numlockx mpDris2

#---------------------------------Workspace---------------------------------
sxhkd & bspc monitor -d       
#---------------------------------------------------------------------------


#----------------------------------Bordas-----------------------------------
bspc config border_width         0
bspc config window_gap           4
bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
#---------------------------------------------------------------------------


#--------------------------------Window Rules-------------------------------
bspc rule -a Google-chrome desktop='^1' follow=off
bspc rule -a Thunar desktop='^3'
bspc rule -a Nemo desktop='^3'
bspc rule -a Ranger desktop='^3'
bspc rule -a Termite desktop='^2'
bspc rule -a Subl3 desktop='^5'
bspc rule -a Vim desktop='^5'
bspc rule -a Code desktop='^5'
bspc rule -a TelegramDesktop desktop='^4'
bspc rule -a Whatsie desktop='^4'
bspc rule -a Oblogout state=fullscreen
bspc rule -a gpick state=floating
bspc rule -a Spotify desktop='^6'
bspc rule -a vlc desktop='^6' follow=on
bspc rule -a NCMPCPP desktop='^6'
bspc rule -a Cava desktop='^6'
bspc rule -a "Apache NetBeans IDE 11.0" desktop='^5'
bspc rule -a Mysql-workbench-bin desktop='^5'
bspc rule -a Zathura state=tiled
bspc rule -a etcher-electron state=floating
bspc rule -a Gimp.bin desktop='^7'
bspc rule -a krita desktop='^7'
bspc rule -a epsxe follow=on
#bspc rule -a Transmisson-gtk state=floating
#---------------------------------------------------------------------------


#-------------------------------Inicialização-------------------------------
mpd &
compton &
numlockx on &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
/usr/lib/xfce4/notifyd/xfce4-notifyd &
~/.config/polybar/launch.sh &
flameshot &
feh --bg-fill ~/Imagens/Wallpapers/Pixel\ Art/1_5181767357021814820.png &
wal -R &
python2 /usr/bin/mpDris2 &
#dunstify -a System -u critical System $'System started sucessfully.\nAll apps running and OK.'
#---------------------------------------------------------------------------
