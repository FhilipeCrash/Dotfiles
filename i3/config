## Tecla Mod, Mod4 = Super, Mod1 = Alt
set $mod Mod4

## Programas da inicialização
exec --no-startup-id xrandr -s 1680x1050
exec --no-startup-id numlockx on
exec --no-startuo-id setxkbmap -model abnt2 -layout br -variant abnt2
exec --no-startup-id compton
exec --no-startup-id feh --bg-fill ~/Imagens/Wallpapers/Pixel\ Art/1_5181767357021814820.png
exec --no-startup-id wal -R
exec --no-startup-id mpd
exec --no-startup-id flameshot
exec --no-startup-id mpDris2
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id /usr/lib/xfce4/notifyd/xfce4-notifyd

## Fonte do sistema
#font pango:monospace 8
#font pango:DejaVu Sans Mono 8
font pango:xos4 Terminess Powerline 10

## Keybinds do sistema
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Google Chrome
bindsym $mod+F1 exec google-chrome-stable

# Sublime
bindsym $mod+F2 exec subl3

# Vim
bindsym $mod+F4 exec termite -e "zsh -ic nvim" --class=Vim

# VS Code
bindsym $mod+F5 exec code

# Netbeans
bindsym $mod+F6 exec netbeans

# Gerenciador de Arquivos
bindsym $mod+e exec thunar
bindsym $mod+Shift+Return exec termite -e "zsh -ic ranger" --class=Ranger

# NCMPCPP
bindsym $mod+F3 exec termite -e "zsh -ic ncmpcpp" --class=NCMPCPP | termite -e "zsh -ic cava" --class=Cava

# Spotify
bindsym $mod+Shift+F3 exec spotify

# Vlc
bindsym $mod+v exec vlc

# Inicia o terminal
bindsym $mod+Return exec termite

# Screenshots
bindsym Print exec flameshot full -p /home/fhilipe/Imagens/Screenshots/
bindsym Shift+Print exec flameshot gui
bindsym Ctrl+Print exec flameshot full -d 3000 -p /home/fhilipe/Imagens/Screenshots/

# Mata a janela focada
bindsym $mod+Shift+q kill

# Inicia o Rofi
bindsym $mod+d exec rofi -show drun -show-icons -font "Terminess Powerline 10" -location 1

# Volume
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ # Aumenta
bindsym XF86AudioLowerVolume exec amixer set Master 5%- # Diminui
bindsym XF86AudioMute exec amixer set Master toggle # Muta

# Controle de Mídia
bindsym XF86AudioNext exec playerctl next # Próxima
bindsym XF86AudioStop exec playerctl pause # Para
bindsym XF86AudioPlay exec playerctl play-pause # Play/Pause
bindsym XF86AudioPrev exec playerctl previous # Anterior

# Controle do NCMPCPP
bindsym Shift+XF86AudioNext exec mpc next # Próxima
bindsym Shift+XF86AudioStop exec mpc stop # Para
bindsym Shift+XF86AudioPlay exec mpc toggle # Play/Pause
bindsym Shift+XF86AudioPrev exec mpc prev # Anterior

# Muda o foco das janelas
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Alternativas aos comandos acima
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move a janela focada
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Alternativa aos comandos acima
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Divide em horizontal(g), vertical(b) ou entra em fullscreen(f)
bindsym $mod+g split h
bindsym $mod+b split v
bindsym $mod+f fullscreen toggle

# Muda o layout das janelas, abas normais(w), abas em cascata(s) e divide a tela(e)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+q layout toggle split

# Alterna entre janela flutuante e mosaico
bindsym $mod+c floating toggle

# Muda o foco entre janela flutuante e mosaico
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Recarrega a configuração
bindsym $mod+Shift+x reload

# Reinicia o i3
bindsym $mod+Shift+r restart

# Reinica a Polybar
bindsym $mod+Ctrl+r exec pkill -USR1 -x polybar

# Sai do i3 
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Escape exec oblogout

## Window Rules
# Espaçamento entre janelas
gaps inner 5
smart_gaps on
workspace_auto_back_and_forth yes

# Borda das janelas
default_border none
default_floating_border none

# Regras para aplicativos
for_window [class="etcher-electron"] floating enable
#for_window [class="vlc"] focus
for_window [class="Oblogout"] fullscreen

# Assign de Workspaces
assign [class="Google-chrome|Firefox"] 1 
assign [class="Termite"] 2 
assign [class="Nemo|Thunar|Ranger"] 3 
assign [class="TelegramDesktop|Whatsie"] 4 
assign [class="Subl3|Vim|Code|Apache NetBeans IDE 11.0|Mysql-workbench-bin"] 5 
assign [class="vlc|NCMPCPP|Cava|Spotify"] 6 
assign [class="Gimp.bin|krita"] 7 

# Redimensiona a janela (pode usar o mouse tambem)
mode "resize" {

        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # Mesmas binds só que com as setas
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Sai do modo resize
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Entra no modo resize
bindsym $mod+r mode "resize"

## Nomes das Workspaces 
set $ws1 "1 "
set $ws2 "2 "
set $ws3 "3 "
set $ws4 "4 "
set $ws5 "5 "
set $ws6 "6 "
set $ws7 "7 "
# 

# Muda para workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7

# Move a janela focada pra workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

